{
  "manifest_version": 3,
  "name": "Add-Hash",
  "version": "1.0",

  "description": "Adds a configured hash key value pair to the url of the current page. Find the code at https://github.com/Matthew-Smith/add-hash.",

  "browser_specific_settings": {
    "gecko": {
      "id": "{add4a54e-c2b3-44f7-93c1-b2581801c3d6}"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "options_ui": {
    "page": "options.html"
  }
}
